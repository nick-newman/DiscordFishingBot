{

    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "removeComments": true,
        "strict": true, 
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "inlineSourceMap": true,
        "moduleResolution": "node"
    },
    "include": [
        "src", "src/index.ts", "src/commands"
    ],
    "exclude": [
        "node_modules"
    ]

}